<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivityAdminActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/tvAdminActividad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/tvAdmNombreActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:text="NombreActividad"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#7d7"
                        android:text="Publicado Por:"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvAdmNombreEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="Aqui va el nombre de la empresa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textColor="#7d7"
                        android:textSize="20dp"
                        android:text="Descripción:"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvAdmDescripcionActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="Aqui va la descripción de la Actividad"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#7d7"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:text="Publicado en:"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvAdmFechaRegistroActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:text="Aqui va la la fecha registro de la Actividad"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textColor="#C2D0CB"
                        android:textStyle="bold"
                        android:text="TOCAR PARA VER DETALLE"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        
        
        
        
        
        
    </ScrollView>

</RelativeLayout>