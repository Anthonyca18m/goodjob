<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DetalleActividadEsperaFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvTituloActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publicante: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvpublicanteActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publicado en : "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvfecharegistroActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvdescripcionActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:id="@+id/tvImgActividadAdmin"
                            android:adjustViewBounds="false"
                            android:src="@drawable/background_4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de Inicio: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvfechainiActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de Fin: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvfechafinActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Recompensa: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvtiporecompensaActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monto Recompensa: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvrecompensaActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Postulantes requeridos: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tvposutlantesrequeridosActividadAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo: "
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:id="@+id/tvMensajeActividadAdmin"
                    android:hint="Ingrese la razon por cual ha tomado la decición"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textAlignment="center">
                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                    android:layout_marginLeft="80dp"
                android:textColor="#ffffff"
                android:background="@color/colorGreen"
                android:id="@+id/btnAceptarActividadEnespera"

                />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rechazar"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/btnRechazarActividadEnespera"
                    android:textColor="#ffffff"
                    android:background="#ff0000"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>









</LinearLayout>